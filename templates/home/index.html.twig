{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		iframe {
			width: 100%;
			height: 1000px;
		}
	</style>
{% endblock %}
{% block body_nocontainer %}
<div class="container">
<div class="card card-body bg-light">
	<h4>Bookings</h4>
	<a href="/bookings" class="btn btn-primary btn-lg btn-block" role="button">Manage Bookings</a>
	<a href="/bookings/new" class="btn btn-primary btn-lg btn-block" role="button">New Booking</a>
</div>
<div class="card card-body bg-light mt-2">
	<h4>Guests</h4>
	<a href="/guests" class="btn btn-primary btn-lg btn-block" role="button">Manage Guests</a>
	<a href="/guests/new" class="btn btn-primary btn-lg btn-block" role="button">New Guest</a>
</div>
<div class="card card-body bg-light mt-2">
	<h4>Gaps</h4>
	<a href="/gaps" class="btn btn-primary btn-lg btn-block" role="button">Show Gaps</a>
</div>
<div>
	<p>{{ message|raw }}</p>
</div>
</div>
<div class="container-fluid">
<div class="row">
<div class="col-xl">
{% for subcalendar in subcalendars %}
	<span class="badge badgex-pill calendar-legend" style="background-color: #{{ subcalendar.color }};">{{ subcalendar.name }}</span>
{% endfor %}
<iframe id="calendarframe" style="clip-path: inset(0 0 25px 0);" src="https://teamup.com/{{ teamupReadonlyKey }}?date=y1&view=y12m&tz=Europe/Rome&showHeader=0&disableSidepanel=1&showViewSelector=0&weekStartDay=su" frameborder="0"></iframe>
{% for subcalendar in subcalendars %}
	<span class="badge calendar-legend" style="background-color: #{{ subcalendar.color }};">{{ subcalendar.name }}</span>
{% endfor %}
</div> {# /col-xl #}
</div> {# /row #}
</div> {# /container-fluid #}
{% endblock %}
